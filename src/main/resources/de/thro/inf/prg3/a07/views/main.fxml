<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
		  fx:controller="de.thro.inf.prg3.a07.controllers.MainController">
	<columnConstraints>
		<ColumnConstraints hgrow="NEVER"/>
		<ColumnConstraints hgrow="NEVER"/>
		<ColumnConstraints hgrow="ALWAYS"/>
	</columnConstraints>
	<rowConstraints>
		<RowConstraints minHeight="10.0" vgrow="NEVER"/>
	</rowConstraints>

	<Button fx:id="btnRefresh" text="Refresh" GridPane.columnIndex="0" GridPane.rowIndex="0">
		<GridPane.margin>
			<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
		</GridPane.margin>
	</Button>
	<Button fx:id="btnClose" text="Close" GridPane.columnIndex="1" GridPane.rowIndex="0">
		<GridPane.margin>
			<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
		</GridPane.margin>
	</Button>
	<CheckBox fx:id="chkVegetarian" text="Vegetarian" GridPane.columnIndex="2" GridPane.rowIndex="0"/>

	<ListView fx:id="mealsList" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.hgrow="ALWAYS"
			  GridPane.rowIndex="1" GridPane.vgrow="ALWAYS"/>

</GridPane>
